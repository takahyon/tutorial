{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "widen",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPaths": [".github/workflows/*"], 
      "matchUpdateTypes": ["major"],
      "groupName": "[Renovate]major dependencies"
    },
    {
      "matchPaths": [".github/workflows/*"], 
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "[Renovate]minor and patch dependencies"
    }
  ],
  "prHourlyLimit":0
}
