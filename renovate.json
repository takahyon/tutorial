{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "widen",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "fileMatch": ["^\\.github/workflows/[^/]+\\.ya?ml$"],
      "matchUpdateTypes": ["major","patch", "minor"],
      "groupName": "[Renovate] Github workflows dependencies"
    }
  ],
  "prHourlyLimit": 0
}
