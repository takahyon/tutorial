{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "widen",
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "matchUpdateTypes": ["major","patch","minor"],
      "groupName": "Github workflows"
    }
  ],
  "prHourlyLimit": 0
}
